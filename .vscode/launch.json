// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Serve & Debug Slides",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Serve Slides",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}

