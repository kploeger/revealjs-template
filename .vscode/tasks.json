{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Slides",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting 'dev'",
          "endsPattern": "Access URLs:"
        }
      }
    }
  ]
}

